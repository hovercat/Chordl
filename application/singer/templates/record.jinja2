{% extends 'skeleton.jinja2' %}

{% block content %}
<div id="header">Welcome to the synchronisierungstool</div>
<div id="song-select">
        <div class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                  <i class="material-icons mdl-list__item">play_arrow</i>
                  <span>21 Guns</span>
                </span>
                <a class="mdl-list__item-secondary-action" href="#"><i class="material-icons">check</i></a>
              </div>
              <div class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                  <i class="material-icons mdl-list__item">play_arrow</i>
                  <span>2x</span>
                </span>
                <a class="mdl-list__item-secondary-action" href="#"><i class="material-icons">check</i></a>
              </div>
              <div class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                  <i class="material-icons mdl-list__item">play_arrow</i>
                  <span>Happy Together</span>
                </span>
                <span class="mdl-list__item-secondary-content">
                  <a class="mdl-list__item-secondary-action" href="#"><i class="material-icons">check</i></a>
              </span>
              </div>
</div>
<div id="controls">
    <button id="recordButton" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Aufnehmen</button>
    <button id="syncedRecordButton" disabled class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Aufnehmen mit Playback</button>
    <button id="pauseButton" disabled class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Pause</button>
    <button id="stopButton" disabled class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Stop</button>
</div>
<h3>Synchronisierungsaufnahme</h3>
<audio preload="auto" controls id="sync_audio">
    <source src="static/sample_sync_21guns.ogg" type="audio/ogg">
    Bei dir funktioniert dass leider nicht. Firefox herunterladen?
</audio>
<h3>Recordings</h3>
<ol id="recordingsList"></ol>
<!-- inserting these scripts at the end to be able to use all the elements in the DOM -->
<script src="https://cdn.rawgit.com/mattdiamond/Recorderjs/08e7abd9/dist/recorder.js"></script>
<script src="/static/app.js"></script>
{% endblock %}